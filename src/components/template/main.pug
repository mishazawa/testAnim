include ../utils/mixins
block variables

doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		title #{title}
		meta(name="viewport" content="width=device-width,initial-scale=1")
		meta(name="keywords" content="")

		link(rel='apple-touch-icon' sizes='180x180' href=require('images/favicon/apple-touch-icon.png'))
		link(rel='icon' type='image/png' sizes='32x32' href=require('images/favicon/favicon-32x32.png'))
		link(rel='icon' type='image/png' sizes='16x16' href=require('images/favicon/favicon-16x16.png'))
		link(rel='manifest' href=require('images/favicon/site.webmanifest'))
		link(rel='mask-icon' href=require('images/favicon/safari-pinned-tab.svg') color='#3078c0')
		meta(name='msapplication-TileColor' content='#2b5797')
		meta(name='theme-color' content='#131A2B')

		//- Main styles
		link(rel="stylesheet" href=require("styles/main.sass"))

	body
		.wrapper
			include ../modules/header/header

			main.content
				block content

			include ../modules/footer/footer

		
		block script

		//- Main scripts
		script(src=require("../../main.js"))
